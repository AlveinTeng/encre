{
  "name": "encre",
  "version": "0.0.1",
  "private": "true",
  "engines": {
    "node": ">=20"
  },
  "packageManager": "yarn@1.22.21",
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "yarn workspace @encre/app run electron-dev",
    "build": "yarn workspace @encre/app run build && yarn workspace @encre/core run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "yarn workspace @encre/app run lint && yarn workspace @encre/core run lint",
    "publish:core": "bash ./release-branch.sh && turbo run --filter @encre/core build lint-fix lint test --concurrency 1 && yarn workspace @encre/core run release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/VictorS67/encre.git"
  },
  "author": "Encre",
  "license": "MIT",
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --write --ignore-unknown",
      "eslint --cache --fix"
    ],
    "*.md": "prettier --write"
  },
  "devDependencies": {
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "turbo": "latest"
  },
  "resolutions": {
    "dpdm@^3.12.0": "patch:dpdm@npm%3A3.12.0#./.yarn/patches/dpdm-npm-3.12.0-0dfdd8e3b8.patch",
    "typedoc-plugin-markdown@next": "patch:typedoc-plugin-markdown@npm%3A4.0.0-next.6#./.yarn/patches/typedoc-plugin-markdown-npm-4.0.0-next.6-96b4b47746.patch"
  }
}
